<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:padding="1dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:text="Codelia"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_detal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:text="Detalles"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_kilometraje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_precio"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/item_image"
            android:text="10.000"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_detal"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/item_image"
            android:text="$30.000/Negociables"
            android:textColor="@color/green_dark" />

        <TextView
            android:id="@+id/item_ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_kilometraje"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/item_image"
            android:text="Quito"
            android:textColor="@color/black" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>