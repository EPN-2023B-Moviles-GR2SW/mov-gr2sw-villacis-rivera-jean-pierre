<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECEFF1"
    tools:context=".ThirdActivity">



    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="415dp"
        android:layout_height="60dp"
        android:background="@color/green_dark"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/mdi__home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"

                android:src="@drawable/ic__baseline_people" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contactos"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@drawable/fontisto__cloud_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicar"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"

                android:src="@drawable/ic__sharp_favorite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoritos"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@drawable/mdi__account_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedor_form"
        android:layout_width="379dp"
        android:layout_height="657dp"
        android:orientation="vertical"
        android:background="#FFECEFF1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/vender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="¿Qué vehículo vendes?"
            android:textColor="#423E3E"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/Tipo_vehiculo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:hint="Tipo"
            android:inputType="text"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textColorHint="#666666"/>

        <EditText
            android:id="@+id/Marca_vehiculo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:hint="Marca"
            android:inputType="text"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/Modelo_vehiculo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:hint="Modelo"
            android:inputType="text"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/Año_vehiculo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:hint="Año"
            android:inputType="text"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textColorHint="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Kilometraje_vehiculo"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                android:hint="Kilometraje"
                android:inputType="text"
                android:textColorHint="#666666"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/Medida_kilometraje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:hint="Medida"
                android:inputType="text"
                android:textColorHint="#666666"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/Precio_vehiculo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:hint="Precio"
            android:inputType="text"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/Ciudad_vehiculo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:hint="Ciudad"
            android:inputType="text"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textColorHint="#666666" />


    </LinearLayout>

    <Button
        android:id="@+id/siguiente"
        android:layout_width="154dp"
        android:layout_height="54dp"
        android:background="#D8EEFF"
        android:text="Siguiente"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedor_form"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>